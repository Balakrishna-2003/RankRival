<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarksWindow_page">


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/title_markswindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marks window"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@color/white"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="139dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_markswindow"
        android:layout_marginBottom="20dp"
        >
        <LinearLayout
            android:id="@+id/markswindow_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/UserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="25sp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/UserUsn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usn"
                android:textSize="25sp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cie - 1"
                android:background="@color/white"
                android:textSize="23sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                />
            <LinearLayout
                android:id="@+id/markswindow_linear_cie1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cie - 2"
                android:background="@color/white"
                android:textSize="23sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />
            <LinearLayout
                android:id="@+id/markswindow_linear_cie2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>